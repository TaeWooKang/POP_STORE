  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../../lumen/bootstrap.min.css" media="screen">
  <link rel="stylesheet" type="text/css" href="../../freebie-bootstrap-footers/assets/css/Footer-with-button-logo.css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <% include ../public/stylesheets/nav %>

  <style>
    .send-button{
      background: #54C7C3;
      width:100%;
      font-weight: 600;
      color:#fff;
      padding: 8px 25px;
    }
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    .my-input{
      box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
      cursor: text;
      padding: 8px 10px;
      transition: border .1s linear;
      width:100%;
    }
    .my-input1{
      box: soild 0 1px 2px rgba(0, 0, 0, 0.1);
      border-color: #ea4335;
      cursor: text;
      padding: 8px 10px;
      transition: border .1s linear;
      width:100%;
      text-align: center;
      color: #ea4335;
      margin-bottom:2%;
    }
    .header-title{
      margin: 10rem 0 5rem 0;
    }
    h1{
      font-size: 31px;
      line-height: 40px;
      font-weight: 600;
      color:#4c5357;
    }
    h2{
      color: #5e8396;
      font-size: 21px;
      line-height: 32px;
      font-weight: 400;
    }
  </style>
</head>
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<body>

<section>
  <div class="container" style="margin-bottom: 50px;">
    <div class="col-xs-6 mx-auto text-center">
      <div class="header-title">
        <h1>POP STORE</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 mx-auto" style="width:344px;">
        <div class="myform form ">
          <div class="myform form ">
            <form id="changePW" action="changePW" method="post">
              <div class="form-group">
                <input type="password" name="password"  class="form-control my-input" id="password" placeholder="새 비밀번호">
              </div>
              <div class="form-group">
                <input type="password" name="re_password"  class="form-control my-input" id="re_password" placeholder="비밀번호 확인">
              </div>
              <div class="text-center ">
                <button type="submit" class=" btn btn-success" style="width:340px; font-size: 16px; margin-right:auto; margin-left:auto;"  id="passwordChange">비밀번호 변경</button>
              </div>
              <br><br>
              <div class="form-group">
                <div id="error1" class="form-control my-input1"></div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
  $("#error1").hide();
  function moveindex(){
    location.href = "/index";
  }
  $("#passwordChange").on("click",function(){
    var password = $("#password").val();
    var re_password = $("#re_password").val();
    console.log(password,re_password)
    if (password == "" | re_password == ""){
      $("#error1").show();
      $("#error1").empty();
      $("#error1").append("입력되지 않은 값이 있습니다.");
      return false;
    }
    else if (password != re_password ){
      $("#error1").show();
      $("#error1").empty();
      $("#error1").append("비밀번호가 일치하지 않습니다.");
      return false;
    }
    else{
      return true;
    }
  });
</script>
<% include ../public/stylesheets/footer %>
</body>
</html>